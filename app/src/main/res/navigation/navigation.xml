<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    android:label="f"
    app:startDestination="@id/newsFragment">

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.new_application.fragment.NewsFragment"
        android:label="Live News"
        tools:layout="@layout/fragment_news">
        <action
            android:id="@+id/action_newsFragment_to_detailSFragment"
            app:destination="@id/detailSFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/detailSFragment"
        android:name="com.example.new_application.fragment.DetailsFragment"
        android:label="Detail Article"
        tools:layout="@layout/fragment_detail_s">
        <argument
            android:name="article"
            app:argType="com.example.new_application.retrofit.response.Article"

            app:nullable="true"
            android:defaultValue="@null" />

    </fragment>
    <fragment
        android:id="@+id/saveNewsFragment"
        android:name="com.example.new_application.fragment.SaveNewsFragment"
        android:label="Save News"
        tools:layout="@layout/fragment_save_news">
        <action
            android:id="@+id/action_saveNewsFragment_to_detailSFragment"
            app:destination="@id/detailSFragment" />
    </fragment>
</navigation>